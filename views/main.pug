doctype html
 .clearfix
  form(ng-submit='post()')
    h4 {{firstname}} says
    textarea.form-control(required='', maxlength='200', rows='3', placeholder='Say something', ng-model='newPost.text')
    input.btn.submit-btn.pull-right(type='submit', value='Chirp!')
 #post-stream
  h4 Chirp Feed
  .post(ng-repeat="post in posts | orderBy:'created_at':true", ng-class-odd="'odd'", ng-class-even="'even'")
    p {{post.text}}
    small Posted by @{{post.created_by}}
    small.pull-right {{post.created_at | date:"h:mma 'on' MMM d, y"}}